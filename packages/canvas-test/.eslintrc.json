{
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": [
    "airbnb-base",
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "ecmaFeatures": {
      "jsx": true
    },
    "project": "./tsconfig.json",
    "sourceType": "module",
    "useJSXTextNode": true
  },
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "rules": {
    "import/extensions": [
      "error",
      "always",
      {
        "ts": "never"
      }
    ],
    "no-console": 0,
    "prettier/prettier": "error",
    "no-param-reassign": "off",
    "no-underscore-dangle": "off",
    "no-useless-constructor": "off",
    "@typescript-eslint/no-inferrable-types": [
      2,
      {
        "ignoreParameters": true,
        "ignoreProperties": true
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".jsx",
          ".ts",
          ".tsx"
        ]
      }
    }
  },
  "ignorePatterns": [
    "public/js/**"
  ]
}
